<div class="container">
  <div class="row">
    <div class="col s12">

      <h1>Lista de reservas</h1>
      <table class="responsive-table highlight">
        <thead>
          <tr>
            <th>Estado</th>
            <th><i class="material-icons blue-text left">date_range</i>Fecha de ingreso</th>
            <th><i class="material-icons blue-text left">today</i>Fecha de salida</th>
            <th><i class="material-icons blue-text left">hotel</i>Hotel</th>
          </tr>
        </thead>
        <tbody>
          <% @bookings.each do |booking| %>
          <tr>
            <td><%= booking.estado %></td>
            <td><%= booking.date_in %></td>
            <td><%= booking.date_out %></td>
            <td><%= booking.hotel.name %></td>
            <td><%= link_to 'Mas informacion', booking %></td>
            <td><%= link_to 'Editar', edit_booking_path(booking) %></td>
            <td><%= link_to 'Eliminar', booking, method: :delete, data: { confirm: 'Estas seguro que deseas eliminar esta reserva?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <p class="green-text">&iquest;Aun no tienes una reserva? &iquest;Que esperas? &iexcl;Obten una reserva en uno de los mejores hoteles internacionales!</p>
      <%= link_to 'Crear nueva reserva', hotels_path, class: 'waves-effect waves-light btn blue' %>
    </div>
  </div>
</div>
